<div class="col-md-3">
    <%= render '/users/userinfo', user: @user %>
    <%= render 'new', book: @book %>
</div>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
  		<tbody>
            <tr>
                <td>
                    <%= link_to user_path(@user.id) do %>
                        <%= image_tag @user.get_profile_image, size: "100x100" %><br>
                        <%= @user.name %>
                    <% end %>
                </td>
                <td><%= link_to @book_dill.title, book_path(@book_dill.id) %></td>
                <td><%= @book_dill.body %></td>
                <% if @user == current_user %>
                    <td><%= link_to "Edit", edit_book_path(@book_dill.id), class: "btn btn-sm btn-success" %></td>
                    <td><%= link_to "Destroy", book_path(@book_dill.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
                <% end %>
            </tr>
        </tbody>
    </table>
</div>