<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

    <div id="error_explanation">
        <% if @user.errors.any? %>
            <% if @user.errors.count == 1 %>
                <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
            <% else %>
                <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
            <% end %>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        <% end %>
    </div>

    <%= form_with model: @user do |f| %>
        <div class="form-group">
            <label for="user_name">Name</label>
            <%= f.text_field :name, class: "form-control", id: "user_name" %>
        </div>
        <div class="form-group">
            <label for="user_profile_image">Image</label>
            <%= f.file_field :profile_image, class: "form-control-file", id: "user_profile_image", placeholder: "プロフィール画像", accept: "image/*" %> 
        </div>
        <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, class: "form-control", id: "user_introduction" %>
        </div>
        <div class="form-group">
            <%= f.submit 'Update User', class: "btn btn-secondary" %>
        </div>
    <% end %>
</div>